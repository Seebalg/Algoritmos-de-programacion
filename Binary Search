int BinarySearch(int A[], int i, int j, int k)
{
    int result = -1, m;
    while (i <= j)
    {
        m = (i + j) >> 1;
        if (k == A[m])
        {
            result = m;
            break;
        }
        else
        {
            if (k > A[m])
                i = m + 1;
                else
                j = m - 1;
        }
    }
    if (result == -1)
        result = -1 * i - 1;
    
    return result;
}
